{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
<h1> Inscription </h1>
<div align="left" class="w-50 p-3">
    {{ form_start(form,{'attr':{'novalidate':""}}) }}

    {{ form_row(form.username,{'attr':{'class':"form-control"}}) }}
    {{ form_row(form.email, {'attr':{'class':"form-control"}}) }}
    {{ form_row(form.password, {'attr':{'class':"form-control"}}) }}
    {{ form_row(form.confirm_password, {'attr':{'class':"form-control"}}) }}

    <button type="submit" class="btn btn-primary btn-lg btn-block"> Inscription !</button>

    {{ form_end(form)}}
</div>

{% endblock %}